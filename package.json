{
    "name": "flash-docusaurus",
    "displayName": "FlashDocusaurus",
    "description": "A VS Code extension for Docusaurus documentation development with intelligent features.",
    "version": "0.2.1",
    "publisher": "FlashDocs",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Match-Yang/FlashDocusaurus"
    },
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters"
    ],
    "keywords": [
        "Docusaurus",
        "MDX",
        "markdown",
        "documentation"
    ],
    "pricing": "Free",
    "icon": "logo.png",
    "activationEvents": [
        "onLanguage:markdown",
        "onLanguage:mdx"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "FlashDocusaurus",
            "properties": {
                "flashDocusaurus.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable FlashDocusaurus extension features"
                },
                "flashDocusaurus.preview.port": {
                    "type": "number",
                    "default": 3000,
                    "description": "Port of the running Docusaurus dev server"
                }
            }
        },
        "commands": [
            {
                "command": "flashDocusaurus.preview.open",
                "title": "Open Preview",
                "category": "FlashDocusaurus",
                "icon": "$(globe)"
            },
            {
                "command": "flashDocusaurus.preview.setPort",
                "title": "Set Preview Port",
                "category": "FlashDocusaurus"
            },
            {
                "command": "flashDocusaurus.basic.frontmatter",
                "title": "Set Page Options (Frontmatter)",
                "category": "FlashDocusaurus",
                "icon": "$(settings)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "flashDocusaurus.preview.open",
                    "when": "flashDocusaurus.isDocusaurusProject && (resourceLangId == markdown || resourceLangId == mdx)",
                    "group": "navigation@99"
                },
                {
                    "command": "flashDocusaurus.basic.frontmatter",
                    "when": "flashDocusaurus.isDocusaurusProject && (resourceLangId == markdown || resourceLangId == mdx)",
                    "group": "navigation@98"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint \"src/**/*.ts\"",
        "package": "npm run compile && vsce package",
        "publish": "npm run compile && vsce publish"
    },
    "devDependencies": {
        "@types/node": "^16.18.34",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "eslint": "^8.26.0",
        "typescript": "^5.3.2"
    }
}

